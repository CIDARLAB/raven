<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>RavenServlet</servlet-name>
        <servlet-class>org.cidarlab.raven.communication.RavenServlet</servlet-class>
        <init-param>
            <param-name>dataDirectory</param-name>
            <param-value/>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>AuthenticationServlet</servlet-name>
        <servlet-class>org.cidarlab.raven.communication.AuthenticationServlet</servlet-class>
        <!--<load-on-startup>2</load-on-startup>-->
    </servlet>
    <servlet-mapping>
        <servlet-name>RavenServlet</servlet-name>
        <url-pattern>/RavenServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthenticationServlet</servlet-name>
        <url-pattern>/AuthenticationServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
